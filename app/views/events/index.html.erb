
<h1>Events</h1>
<div class="row">
   <div class="col-lg-6">
   <h2>Upcoming Events</h2>
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Creator</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @upcoming_events.each do |event| %>
          
          <tr>
            <td><%= event.title %></td>
            <td><%= event.date %></td>
            <td><%= event.creator.name %></td>
            <td><%= link_to 'Show', event %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
   <div class="col-lg-6">
   <h2>Previous Events</h2>
   <table class="table table-striped table-bordered table-hover">
     <thead class="thead-dark">
       <tr>
         <th>Title</th>
         <th>Date</th>
         <th>Creator</th>
         <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
       <% @past_events.each do |event| %>
         
         <tr>
           <td><%= event.title %></td>
           <td><%= event.date %></td>
           <td><%= event.creator.name %></td>
           <td><%= link_to 'Show', event %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
   </div>
</div>
<div class="row">
<h1>Created events</h1>
<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Creator</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @created_events.each do |event| %>
    
    <tr>
      <td><%= event.title %></td>
      <td><%= event.date %></td>
      <td><%= event.creator.name %></td>
      <td><%= link_to 'Show', event %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
<br>

<%= link_to 'New Event', new_event_path %>
