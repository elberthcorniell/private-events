<h1>attendances</h1>

<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
    <tr>
      <th>User</th>
      <th>Attended event</th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.attendee.name %></td>
        <td><%= attendance.attended_event.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

