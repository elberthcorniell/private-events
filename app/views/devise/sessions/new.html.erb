<div class="card">
  <div class="card-header bg-info">
    <h2>Log in</h2>
  </div>
  <div class="card-body">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email %><br /><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"Email" %>
  </div>

    <%= f.password_field :password, autocomplete: "current-password", hidden: true, value: 'password' %>
<br/>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<br/>
  <div class="actions">
    <%= f.submit "Log in",class:"btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>

