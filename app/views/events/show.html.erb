<p id="notice"><%= notice %></p>

<div class="card border-success mb-3" style="max-width: 18rem;">
  <div class="card-header bg-transparent border-success"><strong><%= @event.title %><strong></div>
  <div class="card-body text-success">
    <p class="card-text"><strong>Date:</strong>
<%= @event.date %></p>
  </div>
  <div class="card-footer bg-transparent border-success"><h1>Attendees</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
    <td>Id</td>
    <td>Name</td>
    </tr>
  </thead>
  <% @event.attendances.each do |attendance| %>
    
    <tr>
      <td><%= attendance.attendee.id %></td>
      <td><%= attendance.attendee.name %></td>
    </tr>  
    
    <% end %>
    </table>
<br>
<%= link_to 'Edit', edit_event_path(@event),class:"btn btn-dark" %> 
<%= link_to 'Back', events_path,class:"btn btn-dark" %>
<%= link_to 'Invite', new_attendance_path(:event => @event.id), class:"btn btn-primary" %></div>
</div>

